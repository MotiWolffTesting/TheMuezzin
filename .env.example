# The Muezzin - Environment Variables Example
# Copy this file to .env and fill in your values

# BDS Analysis Configuration

BDS_THRESHOLD_LOW=5.0
BDS_THRESHOLD_MEDIUM=15.0
BDS_THRESHOLD_HIGH=30.0

# Infrastructure Configuration

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_TRANSCRIPTION=audio_transcription
KAFKA_TOPIC_BDS_RESULTS=bds_analysis_results
KAFKA_TOPIC_LLM_ANALYSIS=llm_analysis_results

# MongoDB
MONGODB_CONNECTION_STRING=mongodb://localhost:27017/
MONGODB_DATABASE_NAME=muezzin_db
MONGODB_COLLECTION_BDS=bds_analysis
MONGODB_COLLECTION_LLM=llm_analysis

# Elasticsearch
ELASTICSEARCH_HOST=localhost:9200
ELASTICSEARCH_INDEX_BDS=bds_analysis
ELASTICSEARCH_INDEX_LLM=llm_analysis

# Logging
LOGGER_ES_HOST=localhost:9200
LOGGER_INDEX=muezzin_logs

# Service Configuration

# Data Acceptance
KAFKA_TOPIC_NAME=file_metadata_topic
FILE_PATH=/app/podcasts

# Data Consuming
KAFKA_GROUP_ID=data-consuming-group
MONGODB_ATLAS_URI=mongodb://localhost:27017
MONGODB_DB_NAME=kafka_db
MONGODB_COLLECTION_NAME=processed_messages
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=file_metadata
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=

# Data Transcriber
SPEECH_RECOGNITION_LANGUAGE=en-US

# BDS Analysis
KAFKA_CONSUMER_GROUP_BDS=bds_analysis_group

